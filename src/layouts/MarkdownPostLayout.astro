---
import type { CollectionEntry } from 'astro:content';
import { datefy, slugify, titlefy } from '../scripts';
import BaseLayout from './BaseLayout.astro';
import { Image } from 'astro:assets';

type Props = {
	data: CollectionEntry<'posts'>['data'];
};
const { data } = Astro.props;
---

<BaseLayout pageTitle={data.title}>
	<div class='flex flex-col flex-grow'>
		<h1 class='h1 mb-1'>
			{data.title}
		</h1>
		<span class='text-caption mb-4'>
			by
			<a href=`/author/${slugify(data.author)}` class='hover:line-through'>
				{titlefy(data.author)}
			</a>
			 &#x2981; {datefy(data.pubDate)}
		</span>
		<Image
			src={data.image.url}
			alt={data.image.alt}
			object-fit='cover'
			decoding='async'
			quality='low'
			format='webp'
			width={300}
			height={150}
			class='rounded-l my-8'
			transition:name={data.image.alt}
		/>
		<div class='text-paragraph mdx'>
			<slot />
		</div>
	</div>
</BaseLayout>
