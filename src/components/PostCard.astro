---
import { Image } from 'astro:assets';
const { post } = Astro.props;
const url = post.url;
const { image, title, pubDate, author, description, tags } = post.frontmatter;
---

<li class='border border-black rounded'>
	<a href={url}>
		<div class='p-4 flex gap-4'>
			<Image
				src={image.url}
				alt={image.alt}
				object-fit='scale-down'
				decoding='async'
				quality='low'
				format='webp'
				width={300}
				height={150}
			/>
			<div class='flex flex-col'>
				<p class='text-2xl font-bold mb-1'>
					{title}
				</p>
				<small class='mb-4'>by {author} &#128900; {pubDate.slice(0, 10)}</small>
				<p class='mb-6'>{description}</p>
				<div class='flex gap-2'>
					{
						tags.map((tag: string) => (
							<p class='border border-black p-1 rounded'>{tag}</p>
						))
					}
				</div>
			</div>
		</div>
	</a>
</li>
