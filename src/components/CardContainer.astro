---
import PostCard from './PostCard.astro';
const { filteredPosts } = Astro.props;
---

<ul class='grid lg:grid-cols-2 xl:grid-cols-3 gap-4'>
	{
		filteredPosts.map(
			(post: {
				frontmatter: {
					image: string;
					title: string;
					pubDate: string;
					author: string;
					description: string;
					tags: string;
				};
			}) => <PostCard {post} />
		)
	}
</ul>
